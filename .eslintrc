{
  "parser": "@typescript-eslint/parser",
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  },
  "rules": {
    "import/order": [
      "warn",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "pathGroups": [
          {
            "pattern": "@folder-alias/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@file-alias",
            "group": "internal",
            "position": "before"
          }
        ]
      }
    ],
    "unicorn/prefer-query-selector": "off"
  },
  "extends": [
    "@eslint-kit/base",
    "@eslint-kit/prettier",
    "@eslint-kit/react",
    "@eslint-kit/typescript"
  ]
}
